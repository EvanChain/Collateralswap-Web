# Client Environment Variables for CollateralSwap DApp
# Copy this file to .env.local and configure the values

# Mock Mode (set to true for testing with mock data)
NEXT_PUBLIC_MOCK_MODE=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# Contract Addresses (replace with actual deployed addresses)
NEXT_PUBLIC_PIV_ADDRESS=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_ROUTER_ADDRESS=0x1234567890123456789012345678901234567890

# Token Addresses
NEXT_PUBLIC_USDC_ADDRESS=0xA0b86a33E6441A3063BdFb663c6C8FAc6C8A4Ec2
NEXT_PUBLIC_WETH_ADDRESS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2

# Network Configuration
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_NETWORK_NAME=mainnet
NEXT_PUBLIC_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# For development, you can use these test network settings:
# NEXT_PUBLIC_CHAIN_ID=11155111
# NEXT_PUBLIC_NETWORK_NAME=sepolia
# NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Optional: Analytics and monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
